@using DatabaseAccess.Entities
@model User[]

<h2>User list</h2>

<a class="btn btn-sm btn-primary" asp-controller="AdminRolesManager" asp-action="Index">Roles List</a>

@if (Model.Length == 0)
{
    return;
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<table class="table table-striped table-responsive-md btn-table">
    <thead>
        <tr>
            <th>#</th>
            <th>User</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Length; i++)
        {

            var user = Model[i];
            <tr>
                <th scope="row">@(i + 1)</th>
                <td>@user.Email</td>
                <td>
                    <form asp-action="Details" asp-route-id="@user.Id" method="get">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Details
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
